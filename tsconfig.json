{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "rootDir": ".",
    "baseUrl": "src",
    "allowJs": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    },
  },
  "include": [
    "src",
    "tests"
  ]
}